@using Web.Models
@model RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Регистрация</h2>
<div>
    @using (Html.BeginForm())
    {
        <p>@Html.ValidationSummary(true)</p>
        <p>Логин: @Html.TextBoxFor(x => x.UserName) @Html.ValidationMessageFor(x => x.UserName)</p>
        <p>Пароль: @Html.EditorFor(x => x.Password) @Html.ValidationMessageFor(x => x.Password)</p>
        <p>Повторите пароль: @Html.EditorFor(x => x.ConfirmPassword) @Html.ValidationMessageFor(x => x.ConfirmPassword)</p>
        <p>Email: @Html.TextBoxFor(x => x.Email) @Html.ValidationMessageFor(x => x.Email)</p>
        <p>Повторите email: @Html.TextBoxFor(x => x.ConfirmEmail) @Html.ValidationMessageFor(x => x.ConfirmEmail)</p>
        <p>Имя: @Html.TextBoxFor(x => x.FirstName) @Html.ValidationMessageFor(x => x.FirstName)</p>
        <p>Фамилия: @Html.TextBoxFor(x => x.Surname) @Html.ValidationMessageFor(x => x.Surname)</p>
        <input type="submit" value="Готово" />
    }
</div>